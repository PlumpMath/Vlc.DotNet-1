<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Vlc.DotNet.Wpf"
    xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms">

    <Style TargetType="{x:Type local:VlcControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:VlcControl}">
                    <WindowsFormsHost x:Name="WFH" Background="Black">
                        <Forms:Panel Dock="Fill" x:Name="PnlBox" />
                    </WindowsFormsHost>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
